{
  "name": "@de-formed/node-validations",
  "version": "1.0.0",
  "description": "Modular, KISSable, Composable Validations",
  "main": "dist/index",
  "repository": "https://github.com/prescottbreeden/de-formed-node",
  "author": "prescottbreeden <prescott.breeden@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage --watchAll",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn tsc",
    "prepublishOnly": "yarn test",
    "preversion": "yarn lint",
    "version": "yarn format && git add .",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@de-formed/base": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "jest": "^27.2.0",
    "prettier": "^2.4.0",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "keywords": [
    "validations",
    "functional",
    "composable",
    "modular",
    "node"
  ]
}
